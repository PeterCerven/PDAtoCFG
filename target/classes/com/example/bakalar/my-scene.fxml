<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane fx:id="mainContainer" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bakalar.logic.MainController">
   <right>
      <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Popis Zásobníkového Automatu">
               <font>
                  <Font size="17.0" />
               </font>
            </Text>
            <VBox fx:id="describePDA" prefHeight="155.0" prefWidth="200.0" style="-fx-border-color: black;">
               <children>
                  <TextField fx:id="describeStates" editable="false">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </TextField>
                  <TextField fx:id="describeAlphabet" editable="false">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </TextField>
                  <TextField fx:id="describeStackAlphabet" editable="false">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </TextField>
                  <TextField fx:id="describeEndStates" editable="false" prefHeight="30.0" prefWidth="200.0">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </TextField>
               </children>
            </VBox>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Prechodové funkcie">
               <font>
                  <Font size="17.0" />
               </font>
            </Text>
            <ScrollPane prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" fitToWidth="true" fitToHeight="true" hbarPolicy="NEVER">
               <content>
                  <VBox fx:id="transFunctions" prefHeight="406.0" prefWidth="240.0" style="-fx-border-color: black;" />
               </content>
            </ScrollPane>
         </children>
         <padding>
            <Insets left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </right>
   <center>
      <ScrollPane fx:id="myScrollPane" prefHeight="655.0" prefWidth="1021.0" BorderPane.alignment="CENTER">
         <content>
          <AnchorPane fx:id="mainPane" minHeight="0.0" minWidth="0.0" onMouseClicked="#createNode" prefHeight="2000.0" prefWidth="3000.0" />
         </content>
      </ScrollPane>
   </center>
   <top>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" prefHeight="90.0" prefWidth="473.0">
               <children>
                  <Button fx:id="nodeBtn" mnemonicParsing="false" onAction="#drawNodeOn" prefHeight="40.0" prefWidth="60.0" />
                  <Button fx:id="arrowBtn" mnemonicParsing="false" onAction="#drawArrowOn" prefHeight="40.0" prefWidth="60.0" />
                  <Button fx:id="resetBtn" mnemonicParsing="false" onAction="#resetAll" prefHeight="40.0" prefWidth="60.0" />
                  <Button fx:id="eraseBtn" mnemonicParsing="false" onAction="#eraseFunctionOn" prefHeight="40.0" prefWidth="60.0" />
                  <Button fx:id="undoBtn" mnemonicParsing="false" onAction="#buttonUndo" prefHeight="40.0" prefWidth="60.0" />
                  <Button fx:id="reUndoBtn" mnemonicParsing="false" onAction="#buttonRedo" prefHeight="40.0" prefWidth="60.0" />
                  <Button fx:id="testBtn" mnemonicParsing="false" onAction="#testBoard" prefHeight="40.0" prefWidth="73.0" text="TEST">
                     <font>
                        <Font size="19.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
            <Button fx:id="conversionBtn" mnemonicParsing="false" onAction="#convertPDA" prefHeight="38.0" prefWidth="150.0" text="Konvertuj">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
         </children>
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </HBox>
   </top>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</BorderPane>
