<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<BorderPane fx:id="mainContainer" prefWidth="1256.0" xmlns="http://javafx.com/javafx/19"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bakalar.logic.MainController">
  <right>
    <VBox fx:id="right" prefHeight="200.0" prefWidth="100.0" spacing="10.0" BorderPane.alignment="CENTER">
      <children>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Popis Zásobníkového Automatu">
          <font>
            <Font size="17.0"/>
          </font>
        </Text>
        <VBox fx:id="describePDA" prefHeight="155.0" prefWidth="200.0" style="-fx-border-color: black;">
          <children>
            <TextField fx:id="describeStates" editable="false">
              <font>
                <Font size="18.0"/>
              </font>
            </TextField>
            <TextField fx:id="describeAlphabet" editable="false">
              <font>
                <Font size="18.0"/>
              </font>
            </TextField>
            <TextField fx:id="describeStackAlphabet" editable="false">
              <font>
                <Font size="18.0"/>
              </font>
            </TextField>
            <TextField fx:id="describeEndStates" editable="false" prefHeight="30.0" prefWidth="200.0">
              <font>
                <Font size="18.0"/>
              </font>
            </TextField>
          </children>
        </VBox>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Prechodové funkcie">
          <font>
            <Font size="17.0"/>
          </font>
        </Text>
        <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" prefHeight="200.0" prefWidth="200.0"
                    VBox.vgrow="ALWAYS">
          <content>
            <VBox fx:id="transFunctions" prefHeight="400.0" prefWidth="240.0"
                  style="-fx-border-color: black;"/>
          </content>
        </ScrollPane>
      </children>
      <padding>
        <Insets left="10.0" right="10.0" top="10.0"/>
      </padding>
      <BorderPane.margin>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
      </BorderPane.margin>
    </VBox>
  </right>
  <center>
    <ScrollPane fx:id="myScrollPane" prefHeight="655.0" prefWidth="1021.0" BorderPane.alignment="CENTER">
      <content>
        <AnchorPane fx:id="mainPane" minHeight="0.0" minWidth="0.0" onMouseClicked="#createNode"
                    prefHeight="2000.0" prefWidth="3000.0"/>
      </content>
      <BorderPane.margin>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
      </BorderPane.margin>
    </ScrollPane>
  </center>
  <top>
    <VBox prefHeight="122.0" prefWidth="1238.0" BorderPane.alignment="CENTER">
      <BorderPane.margin>
        <Insets/>
      </BorderPane.margin>
      <children>
        <HBox prefHeight="28.0" prefWidth="1256.0">
          <children>
            <MenuBar prefHeight="28.0" prefWidth="1279.0">
              <menus>
                <Menu mnemonicParsing="false" style="-fx-font-size: 15px;" text="Súbor">
                  <items>
                    <MenuItem mnemonicParsing="false" onAction="#saveToFile" text="Ulož"/>
                    <MenuItem mnemonicParsing="false" onAction="#loadFromFile" text="Nahraj"/>
                    <MenuItem mnemonicParsing="false" onAction="#closeApp" text="Zavri"/>
                  </items>
                </Menu>
              </menus>
            </MenuBar>
          </children>
        </HBox>
        <HBox alignment="CENTER" prefHeight="72.0" prefWidth="1226.0" spacing="50.0">
          <children>
            <HBox alignment="CENTER" prefHeight="50.0" prefWidth="473.0">
              <children>
                <Button fx:id="nodeBtn" mnemonicParsing="false" onAction="#drawNodeOn" prefHeight="40.0"
                        prefWidth="60.0"/>
                <Button fx:id="arrowBtn" mnemonicParsing="false" onAction="#drawArrowOn"
                        prefHeight="40.0" prefWidth="60.0"/>
                <Button fx:id="resetBtn" mnemonicParsing="false" onAction="#resetAll" prefHeight="40.0"
                        prefWidth="60.0"/>
                <Button fx:id="eraseBtn" mnemonicParsing="false" onAction="#eraseFunctionOn"
                        prefHeight="40.0" prefWidth="60.0"/>
                <Button fx:id="undoBtn" mnemonicParsing="false" onAction="#buttonUndo" prefHeight="40.0"
                        prefWidth="60.0"/>
                <Button fx:id="reUndoBtn" mnemonicParsing="false" onAction="#buttonRedo"
                        prefHeight="40.0" prefWidth="60.0"/>
                <Button fx:id="testBtn" mnemonicParsing="false" onAction="#testBoard" prefHeight="40.0"
                        prefWidth="73.0" text="TEST">
                  <font>
                    <Font size="19.0"/>
                  </font>
                </Button>
              </children>
            </HBox>
            <Button fx:id="conversionBtn" mnemonicParsing="false" onAction="#convertPDA" prefHeight="38.0"
                    prefWidth="150.0" text="Konvertuj">
              <font>
                <Font size="18.0"/>
              </font>
            </Button>
          </children>
          <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
          </padding>
        </HBox>
      </children>
    </VBox>
  </top>
  <opaqueInsets>
    <Insets/>
  </opaqueInsets>
</BorderPane>
